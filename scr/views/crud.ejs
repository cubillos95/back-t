<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="/js/crud.js" type="module"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>CRUD</title>
</head>
<!--  -------------------------------------------------------- ---------------------------------------->
<!--  -------------------------------------------------------- ---------------------------------------->

<body>
    <div class="container">
        <div class="row">
            <div class="col-9">
                <div id="imagenPrincipal">
                    
                </div>
            </div>
            <div class="col">
                <!--  -------------------------------------------------------- ---------------------------------------->
                <!-- Menu -->
                <div id="menu">
                    <ul>
                        <li><button type="button" class="btn btn-dark" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">Crear</button></li>
                        <li><button type="button" class="btn btn-dark" id="actualizar" data-bs-toggle="modal"
                            data-bs-target="#actualizarModal">Actualizar</button></li>
                        <li><button type="button" class="btn btn-dark" id="eliminar">Eliminar</button></li>
                    </ul>
                </div>
                <!--  -------------------------------------------------------- ---------------------------------------->
                <!-- Ista  -->
                <div id="lista">
                    
                </div>
            </div>
        </div>
    </div>
    <!--  -------------------------------------------------------- ---------------------------------------->
    <!--  -------------------------------------------------------- ---------------------------------------->
    <!--  -------------------------------------------------------- ---------------------------------------->
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Subir imagen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="floatingInput">
                        <label for="floatingInput">Descripcion</label>
                    </div>

                    <input type="file" name="myImage" accept="image/*" id="fileData">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id="subirImg" class="btn btn-success">Subir</button>
                </div>
            </div>
        </div>
    </div>
    <!--  -------------------------------------------------------- ---------------------------------------->
    <!-- Modal  Actualizar-->
    <div class="modal fade" id="actualizarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="actualizarModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="DescripcionActualizar">
                        <label for="floatingInput">Descripcion</label>
                    </div>

                    <input type="file" name="myImage" accept="image/*" id="imagenActualizar">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id="actualizaImagen" class="btn btn-success">Actualizar</button>
                </div>
            </div>
        </div>
    </div>


</body>
<!--  -------------------------------------------------------- ---------------------------------------->
<!--  -------------------------------------------------------- ---------------------------------------->
<!--  -------------------------------------------------------- ---------------------------------------->


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
    crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</html>